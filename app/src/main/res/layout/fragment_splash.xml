<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/fragment_splash_scene"
    tools:context=".SplashFragment">


    <ImageView
        android:id="@+id/wasteid_team_finder_logo_splash_layout"
        android:layout_width="100dp"

        android:layout_height="110dp"

        android:background="@drawable/ic_team_finder_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wasteid_team_finder_tv_splash_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Team Finder"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_extra_bold"
        android:textSize="32dp"

        app:layout_constraintTop_toBottomOf="@id/wasteid_team_finder_logo_splash_layout"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/continue_button_splash_layout"

        style="?attr/materialIconButtonFilledStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_arrow_right"
        app:iconTint="@color/white"
        android:backgroundTint="@color/black"
        app:cornerRadius="12dp"

        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="219dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.motion.widget.MotionLayout>