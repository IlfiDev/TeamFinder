<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LogInFragment">

    <TextView
        android:id="@+id/wasteid_authorization_log_in_tv"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Авторизация"
        android:textSize="32dp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_extra_bold"

        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/waste_id_log_in_tv"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Логин"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_bold"

        app:layout_constraintTop_toBottomOf="@id/wasteid_authorization_log_in_tv"
        android:layout_marginTop="107dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="69dp"/>

    <EditText
        android:id="@+id/email_log_in_edittext"

        android:layout_width="0dp"
        android:layout_height="48dp"

        android:background="@drawable/shape_login_edittext"
        android:hint="Почта"
        android:fontFamily="@font/nunito_bold"
        android:includeFontPadding="true"
        android:paddingLeft="12dp"
        android:textSize="14dp"


        app:layout_constraintTop_toBottomOf="@id/waste_id_log_in_tv"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/waste_id_log_in_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="68dp"/>

    <EditText
        android:id="@+id/password_log_in_edittext"

        android:layout_width="0dp"
        android:layout_height="48dp"

        android:background="@drawable/shape_login_edittext"
        android:hint="Пароль"
        android:includeFontPadding="true"
        android:paddingLeft="12dp"
        android:textSize="14dp"
        android:fontFamily="@font/nunito_bold"

        app:layout_constraintTop_toBottomOf="@id/email_log_in_edittext"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/waste_id_log_in_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="68dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        android:text="Нет аккаунта?"
        android:textColor="@color/text_gray90"
        android:textSize="16dp"
        android:fontFamily="@font/nunito_semi_bold"
        android:gravity="center_vertical"

        app:layout_constraintTop_toTopOf="@id/create_account_log_in_tb"
        app:layout_constraintBottom_toBottomOf="@id/create_account_log_in_tb"
        app:layout_constraintStart_toStartOf="@id/password_log_in_edittext" />

    <Button
        android:id="@+id/create_account_log_in_tb"

        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="92dp"
        android:layout_height="42dp"

        android:text="Создать"
        android:textColor="@color/text_black21"
        android:textSize="16dp"
        android:fontFamily="@font/nunito_bold"
        android:textStyle="normal"

        app:layout_constraintTop_toBottomOf="@id/password_log_in_edittext"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/password_log_in_edittext"/>

    <Button
        android:id="@+id/back_button_log_in"

        style="?attr/materialIconButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_arrow_right"

        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="89dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="69dp"/>

    <Button
        android:id="@+id/log_in_button"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"

        android:text="Начать"
        android:textColor="@color/white"
        app:backgroundTint="@color/text_black21"
        app:cornerRadius="16dp"

        app:layout_constraintTop_toTopOf="@id/back_button_log_in"
        app:layout_constraintBottom_toBottomOf="@id/back_button_log_in"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="60dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>